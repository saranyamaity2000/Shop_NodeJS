<%- include('../includes/head') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navbar')%>
  <main>
    <% if(prods.length==0) {%>
    <h1>No Products to Show!</h1>
    <%} else { %>
    <div class="grid">
      <% for(let product of prods) {%>
      <article class="card product-item">
        <header class="card__header">
          <h1 class="product__title"><%= product.title %></h1>
        </header>
        <div class="card__image">
          <img src="<%= product.imgLink %>" alt="Manga">
          <!-- <img src="https://sm.mashable.com/t/mashable_in/feature/3/368-episod/368-episodes-later-kakashis-face-revealed-in-naruto-shippude_vrrk.2496.jpg" alt="A Book"> -->
        </div>
        <div class="card__content">
          <h2 class="product__price">$<%= product.price %></h2>
          <p class="product__description"><%=product.description%></p>
        </div>
        <div class="card__actions">
          <a href="/products/<%=product.id%>"><button type="submit" class="btn">Details</button></a>
          <form action="/add-to-cart" method="post">
            <button type="submit" class="btn">Add to Cart</button>
          </form>
        </div>
      </article>
      <% } %>
    </div>
    <% } %>
  </main>
  <%- include('../includes/footer')%>